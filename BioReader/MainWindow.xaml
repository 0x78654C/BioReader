<Window x:Class="BioReader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BioReader"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <RichTextBox x:Name="bioTextConvertor" TextChanged="bioTextConvertor_TextChanged" Margin="0,0,0,46">
            <FlowDocument>
                <Paragraph>
                    <Run Text="RichTextBox"/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
        <Button x:Name="BioConvert" Content="Bionic Reader Convert" HorizontalAlignment="Left" Margin="53,393,0,0" VerticalAlignment="Top" Click="BioConvert_Click"/>

    </Grid>
</Window>
