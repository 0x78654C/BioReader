<Window x:Class="BioReader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BioReader"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <RichTextBox FontSize="25" x:Name="bioTextConvertor" Margin="0,0,0,60">
            <FlowDocument>
                <Paragraph>
                    <Run Text="Simple text editor for Windows with C# runtime compiler and code execution using Roslyn. Useful to run code on the fly and get instant result."/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
        <Button x:Name="BioConvert" Content="Bionic Reader Convert" Margin="54,0,559,15" Click="BioConvert_Click" Height="36" VerticalAlignment="Bottom" FontSize="18"/>

    </Grid>
</Window>
